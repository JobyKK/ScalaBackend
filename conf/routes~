# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                      controllers.MainController.index(path = "")
GET         /events                controllers.MainController.events

GET         /message               controllers.MessageController.getMessages(page: Int ?= 0, perPage: Int ?= 10)
POST        /message               controllers.MessageController.saveMessage

# Webjars, requirejs, routes and other assets
GET         /lib/require.js        controllers.WebJarAssets.requirejs
GET         /webjars/*file         controllers.WebJarAssets.at(file)
GET         /assets/*file          controllers.Assets.at(path="/public", file)
GET         /routes.js             controllers.MainController.router

# Every other page
GET         /*path                 controllers.MainController.index(path)


#Employee
POST        /resumes               controllers.ResumeController.getResumes
POST        /employee/newResume           controllers.ResumeController.saveResume
POST        /getResume             controllers.ResumeController.getResume

POST        /deleteByIdResume             controllers.ResumeController.deleteById


POST    /employee/resumes      		controllers.ResumeController.resumes
POST    /employee/resume      		controllers.ResumeController.resume
#POST   /employee/newResume      	controllers.ResumeController.newResume
POST    /employee/updateResume      controllers.ResumeController.updateResume
POST    /employee/deleteResume      controllers.ResumeController.deleteResume

POST    /employee/profile      		controllers.ResumeController.profile
POST    /employee/updateProfile     controllers.ResumeController.updateProfile
POST    /employee/deleteCustomer    controllers.ResumeController.deleteCustomer